<h2>{{title}}</h2>
<p>{{body}}</p>
<p>Posted by: {{username}}</p>
<p>Date: {{format_date createdAt}}</p>
<h3>Comments</h3>
{{#each comments}}
  <div class="comment">
    <p>{{body}}</p>
    <p>Comment by: {{username}}</p>
    <p>Date: {{format_date createdAt}}</p>
  </div>
{{/each}}
{{#if logged_in}}
  <h3>Add a Comment</h3>
  <form class="comment-form">
    <div class="form-group">
      <label for="comment-body">Comment:</label>
      <textarea id="comment-body" name="body" rows="4" required></textarea>
    </div>
    <button type="submit">Submit</button>
  </form>
{{else}}
  <p>Please <a href="/login">login</a> to leave a comment.</p>
{{/if}}
